<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Broccoli.Windows.Dialogs.MessageBoxWindow"
        Title="{Binding Title}" Width="400" Height="150">

    <StackPanel Margin="10">
        <TextBlock Text="{Binding Message}" Margin="0 0 0 10" TextWrapping="Wrap" />
        <ItemsControl Items="{Binding Options}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}" Margin="0 0 5 0" Command="{Binding Command}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Window>